#include <stdio.h>
#include <string.h>
#include <unistd.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    char nome[25];
    float vida, dano, velocidade, defesa;
    int escolha;
    //fenix
    float fvida = 300, fdano= 15;
    //kraken
    float kvida = 200, kdano= 20;
    //quimera
    float qvida = 500, qdano= 10;
    
    srand(time(NULL));
    
    printf("\n\n        Lucky Adventure      \n\nDigite o nome do personagem (atÃ© 24 letras):");
    scanf("%24s", nome);
    printf("\nBem_Vindo %s, nesta jornada voce precisara contar com um pouco de sorte pra vencer", nome);
    printf("\n Seus atributos serao definidos aleatoriamente agora...\n\n");
 
    printf(" ATRIBUTOS:  \n");
    vida = rand() % 100;
    dano = rand() % 100;
    velocidade = rand() % 100;
    defesa = rand() % 5;
    printf("\nHP: %2.f de vida\nPROTECAO: %2.f de defesa\nAGILIDADE: %2.f de velocidade\nATAQUE: %2.f de dano\n", vida, defesa, velocidade, dano);
    
    escolha = rand() % 3;
    printf("\n\nLuta escolhida_ Luta %i Rival: ", escolha);
    sleep(5);
    
    if(escolha==3||escolha==0)
    {
        printf("FENIX\n\n   Luta:\n");
        sleep(2);
            printf("Fenix status:--------HP: %2.f --- VS ---- %s status:--------HP: %2.f ", fvida, nome, vida);
            while(vida>0||fvida>0)
            {
                printf("\nVoce atacaaaa\n");
                fvida = fvida - dano;
                printf("\nA Vida de Fenix agora e: %2.f", fvida);
                printf("\nCuidado ataque da Fenix\n");
                vida = vida - (fdano-defesa);
                printf("\nA Vida de %s agora e: %2.f", nome, vida);
                if(vida>0||fvida>0)
                {
                    break;
                }
                sleep(4);
            }
    }
    
    if(escolha==2)
    {
        printf("QUIMERA\n\n");
        sleep(2);
            while(vida>0||fvida>0)
            {
                printf("\nVoce atacaaaa\n");
                fvida = fvida - dano;
                printf("\nA Vida de Fenix agora e: %2.f", fvida);
                printf("\nCuidado ataque da Fenix\n");
                vida = vida - (fdano-defesa);
                printf("\nA Vida de %s agora e: %2.f", nome, vida);
                if(vida>0||fvida>0)
                {
                    break;
                }
                sleep(4);
            }
    }
    if(escolha==1)
    {
        printf("KRAKEN\n\n");
        sleep(2);
            while(vida>0||fvida>0)
            {
                printf("\nVoce atacaaaa\n");
                fvida = fvida - dano;
                printf("\nA Vida de Fenix agora e: %2.f", fvida);
                printf("\nCuidado ataque da Fenix\n");
                vida = vida - (fdano-defesa);
                printf("\nA Vida de %s agora e: %2.f", nome, vida);
                if(vida>0||fvida>0)
                {
                    break;
                }
                sleep(4);
            }
    }

    return 0;
}
