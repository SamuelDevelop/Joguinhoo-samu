#include <stdio.h>
#include <string.h>
#include <unistd.h>
#include <stdlib.h>
#include <time.h>

int
main ()
{
  char nome[25];
  float vida, dano, velocidade, defesa;
  int escolha;
  //fenix
  float fvida = 100, fdano = 15;
  //kraken
  float kvida = 200, kdano = 20;
  //quimera
  float qvida = 300, qdano = 15;

  srand (time (NULL));

  printf
	("\n\n        Lucky Adventure      \n\nDigite o nome do personagem (atC) 24 letras):");
  scanf ("%24s", nome);
  printf
	("\nBem_Vindo %s, nesta jornada voce precisara contar com um pouco de sorte pra vencer",
	 nome);
  printf ("\n Seus atributos serao definidos aleatoriamente agora...\n\n");

  printf (" ATRIBUTOS:  \n");
  vida = rand () % 130;
  dano = rand () % 80;
  velocidade = rand () % 100;
  defesa = rand () % 50;
  printf
	("\nHP: %2.f de vida\nPROTECAO: %2.f de defesa\nAGILIDADE: %2.f de velocidade\nATAQUE: %2.f de dano\n",
	 vida, defesa, velocidade, dano);

  escolha = rand () % 3;
  printf ("\n\nLuta escolhida_ Luta %i Rival: ", escolha);
  sleep (5);

  if (escolha == 3 || escolha == 0)
	{
	  printf ("FENIX\n\n");
	  printf ("Fenix status_HP: %2.f --- VS --- %s status_HP: %2.f ", fvida, nome, vida);
	  while (vida > 0 || fvida > 0)
		{
		  printf ("\nVoce ataca fenix com tudooo\n");
		  fvida = fvida - dano;
		  printf ("A Vida de Fenix cai para: %2.f", fvida);
		  printf ("\nFenix voa e joga fogo em voce\n");
		  vida = vida - (fdano - defesa);
		  printf ("\n %s se queima e agora sua vida fica em: %2.f", nome, vida);
		  printf("\n-----------------\n");
		  sleep(4);
		  if (fvida < 0)
			{
			  printf ("\n\nGAME WIN!!!\n\nVoce Venceu! Ou apenas teve sorte...");
			  break;
			}
		  if (vida < 0)
			{
			  printf ("\n\nGAME OVER!!!\n\nVoce foi Queimado por brasas de fenix nao teve sorte");
			  break;
			}
		}
	}

  if (escolha == 2)
	{
	  printf ("QUIMERA\n\n");
	  printf ("Quimera status_HP: %2.f --- VS --- %s status_HP: %2.f ", fvida, nome, vida);
	  while (vida > 0 || fvida > 0)
		{
		  printf ("\nVoce atacaaaa\n");
		  fvida = fvida - dano;
		  printf ("\nA Vida de Fenix agora e: %2.f", fvida);
		  printf ("\nCuidado ataque da Fenix\n");
		  vida = vida - (fdano - defesa);
		  printf ("\nA Vida de %s agora e: %2.f", nome, vida);
		  printf("\n-----------------\n");
		  sleep (4);
		  if (fvida < 0)
			{
			  printf ("\n\nGAME WIN!!!\n\nVoce Venceu! Ou apenas teve sorte...");
			  break;
			}
		  if (vida < 0)
			{
			  printf ("\n\nGAME OVER!!!\n\nVoce foi Queimado por brasas de fenix nao teve sorte");
			  break;
			}
		}
	}
  if (escolha == 1)
	{
	  printf ("KRAKEN\n\n   Luta:\n");
	  printf ("Kraken status_HP: %2.f --- VS --- %s status_HP: %2.f ", fvida,
			  nome, vida);
	  while (vida > 0 || fvida > 0)
		{
		  printf ("\nVoce atacaaaa\n");
		  fvida = fvida - dano;
		  printf ("\nA Vida de Fenix agora e: %2.f", fvida);
		  printf ("\nCuidado ataque da Fenix\n");
		  vida = vida - (fdano - defesa);
		  printf ("\nA Vida de %s agora e: %2.f", nome, vida);
		  printf("\n-----------------\n");
		  sleep (4);
		  if (fvida < 0)
			{
			  printf ("\n\nGAME WIN!!!\n\nVoce Venceu! Ou apenas teve sorte...");
			  break;
			}
		  if (vida < 0)
			{
			  printf ("\n\nGAME OVER!!!\n\nVoce foi Queimado por brasas de fenix nao teve sorte");
			  break;
			}
		}
	}

  return 0;
}

